<div class="product-container">
  <div class="img">
    <%= image_tag @product.featured_image if @product.featured_image.attached? %>
  </div>
  <div class="product-description">
    <h1><%= @product.name %></h1>
    <%= @product.description %>
    <div class="inventory">
      <h2>Inventory</h2>
      <p>Available stock: <%= @product.inventory_count %></p>
    </div>
  </div>
</div>

<div class="button-container">
  <%= link_to "Back", products_path %>
  <%= link_to "Edit", edit_product_path(@product) %>
  <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "delete" %>
</div>

