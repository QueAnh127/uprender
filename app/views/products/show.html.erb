  justify-content: center;
  margin: 1rem auto;
  max-width: 800px;
}

.product-description {
  text-align: center;
  margin: 1rem auto;
  max-width: 800px;
  color: #495057;
}

.img {
  text-align: center;
  margin: 1rem auto;
}

img {
  max-width: 50%;
  height: auto;
  display: block;
  margin: 1rem auto;
}

a, button {
  display: inline-block;
  margin: 0.5rem 0.5rem 0.5rem 0;
  padding: 0.5rem 1rem;
  color: white;
  background-color: blueviolet;
  border: none;
  border-radius: 0.25rem;
  text-decoration: none;
  text-align: center;
  cursor: pointer;
}

a:hover, button:hover {
  background-color: violet;
}

button.delete {
